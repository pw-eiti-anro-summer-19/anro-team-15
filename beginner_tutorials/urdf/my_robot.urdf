<?xml version="1.0"?>
<robot name="machine">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

 <material name="white">
    <color rgba="1 1 1 1"/>
  </material>

 <link name="base_link">
    <visual>
      <geometry>
        <box size="0.19 0.19 0.09"/>
      </geometry>
      <material name="blue"/>
    </visual>
  </link>

  <link name="link_1">
    <visual>
      <geometry>
        <cylinder length="0.08" radius="0.095"/>
      </geometry>
      <origin rpy="0 0 0" xyz="0 0 0.042"/>
      <material name="white"/>
    </visual>
  </link>

  <joint name="base_to_link_1" type="continuous">
    <parent link="base_link"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.042"/>
  </joint>

<link name="link_2">
    <visual>
      <geometry>
        <box size="0.07 0.07 0.18"/>
      </geometry>
      <origin rpy="0 0.78535 0" xyz="0.03 0 0.1"/>
      <material name="white"/>
    </visual>
  </link>

  <joint name="base_to_link_2" type="revolute">
    <parent link="link_0"/>
    <child link="link_1"/>
    <origin xyz="0 0 0.045"/>
    <axis xyz="0 1 0">
    <limit effort="30" velocity="1.0" lower="-1" upper="1" />
  <joint>

 <link name="link_3">
    <visual>
      <geometry>
        <box size="0.05 0.04 0.19"/>
      </geometry>
      <origin rpy="0 1.10562 0" xyz="0.03 0 0.1"/>
      <material name="white"/>
    </visual>
  </link>

  <joint name="base_to_link_3" type="revolute">
  <axis xyz="0 1 0">
  <limit effort="30" velocity="1.0" lower="-1" upper="1" />
    <parent link="link_2"/>
    <child link="link_3"/>
    <origin rpy="0 0 0" xyz="0.14 0.01 0.12"/>
  </joint>

</robot>


